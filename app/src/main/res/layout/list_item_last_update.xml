<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/last_update_list_item_padding_side"
        android:paddingEnd="@dimen/last_update_list_item_padding_side"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/last_update_list_item_padding_top"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_last_update_item_chapter_novel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Novel" />

            <TextView
                android:id="@+id/list_last_update_item_chapter_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Release"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/last_update_list_item_padding_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_last_update_item_chapter_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/list_last_update_item_chapter_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="0dp"
                android:paddingStart="@dimen/last_update_caption_padding_start"
                android:text="Caption"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?android:attr/textColorLink" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>