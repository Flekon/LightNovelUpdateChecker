<resources>
    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ApplicationDarkTheme" parent="Theme.AppCompat">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorAccent">@color/colorAccentPink</item>

        <item name="navigationBarColor">?colorPrimary</item>
        <item name="navigationCheckedButtonColor">?colorAccent</item>
    </style>

    <style name="ApplicationLightTheme" parent="Theme.AppCompat.DayNight">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="navigationBarColor">?colorPrimary</item>
        <item name="navigationCheckedButtonColor">@color/colorTeal500</item>
    </style>

    <style name="BottomNavigation" theme="@style/Theme.AppCompat.Light">
        <item name="itemIconTint">@color/navigation_button_color</item>
        <item name="itemTextColor">@color/navigation_button_color</item>
    </style>
</resources>
